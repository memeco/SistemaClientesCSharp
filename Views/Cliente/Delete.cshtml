@model SistemaClientes.Models.Cliente

@{
    ViewData["Title"] = "Deletar Cliente";
}

<h2>Deletar Cliente</h2>

<h4>Tem certeza de que deseja deletar este cliente?</h4>
<hr />
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <!-- Adicione os outros campos conforme necessário -->
    </dl>
</div>
<div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ID_Cliente" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
    </form>
</div>
